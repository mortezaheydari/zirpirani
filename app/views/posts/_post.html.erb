<div class="row">
    <div class="large-12 columns">
        <%= render "post/header", post: post %>
    </div>
    <div class="large-12 columns">
        <%= image_tag post.image.url(:large), als: post.title %>
    </div>
    <div class="large-12 columns info">
        <a href="#"><div class="large-6 small-6 fb_button left">بده بغلی</div></a>
        <a href="#"><div class="large-6 small-6 tw_button">بده بغلی</div></a>
        <div class="large-12 columns postFooter">

            <span>تعداد خنده: ۱۲۲۱</span>
            <span class="left dateInfo"><%= time_ago_in_words(post.created_at) %> by <%= link_to post.owner.name, post.owner %></span>
        </div>
    </div>
</div>
<hr>