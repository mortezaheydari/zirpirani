<div class="row MarginTop">
    <div class="large-8 large-centered columns panel">

        <div class="row">
            <div class="large-10 large-centered columns">
                <h2>ورود به وبسایت</h2>
                <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical custom' }) do |f| %>
                  <%= f.input :email, label: "ایمیل", :autofocus => true %>
                  <%= f.input :password, label: "پسورد" %>
                  <%= f.input :remember_me, label: "\"منو فراموشم نكن ...   \"" , :as => :boolean if devise_mapping.rememberable? %>
                  <%= f.button :submit, "وارد می شویم", :class => 'btn-primary button left' %>
                <% end %>
            </div>
<hr>
            <div class="large-10 large-centered columns">
                <%= link_to account_omniauth_authorize_path(:facebook) do %>
                    <div class="large-12 large-centered fb_button">ورود از طریق فیسبوک</div>
                <% end -%>
            </div>
<hr>
            <div class="large-10 large-centered columns no-padding-right">
                <div class="large-6 columns">
                    <h3>ثبت نام نکردی؟! نکردی؟!! نکردی؟!!!</h3>
                    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                        <%= link_to "ثبت نام کن", new_registration_path(resource_name) %>
                    <% end -%>
                </div>

                <div class="large-6 columns">
                    <h3>کمکم کن ....پسوردم یادم رفته!!!!</h3>
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
                        <%= link_to "جووون مادرت پسوردم رو درست کن", new_password_path(resource_name) %><br />
                    <% end -%>
                </div>
            </div>
        </div>
    </div>

</div>
