<div class="row MarginTop">
    <div class="large-8 large-centered columns panel">

        <div class="row">
            <div class="large-10 large-centered columns">
                <h2>Sign in</h2>
                <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical custom' }) do |f| %>
                  <%= f.input :email, :autofocus => true %>
                  <%= f.input :password %>
                  <%= f.input :remember_me, label: "\"منو فراموش نكن ...   \"" , :as => :boolean if devise_mapping.rememberable? %>
                  <%= f.button :submit, "Sign in", :class => 'btn-primary button left' %>
                <% end %>
            </div>
<hr>
            <div class="large-10 large-centered columns">
                <%= link_to account_omniauth_authorize_path(:facebook) do %>
                    <div class="large-12 large-centered fb_button">Sign in with Facebook</div>
                <% end -%>
            </div>
<hr>
            <div class="large-10 large-centered columns no-padding-right">
                <div class="large-6 columns">
                    <h3>Not a registered member?</h3>
                    <p>Creating a new account is easy and takes less than a minute.</p>
                    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                        <%= link_to "Register for a new account", new_registration_path(resource_name) %>
                    <% end -%>
                </div>

                <div class="large-6 columns">
                    <h3>Forgot your password?</h3>
                    <p>Click the link below:</p>
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
                        <%= link_to "Reset password", new_password_path(resource_name) %><br />
                    <% end -%>
                </div>
            </div>
        </div>
    </div>

</div>
