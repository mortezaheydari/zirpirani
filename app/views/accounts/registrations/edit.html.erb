<div class="row">
    <div class="large-8 push-4 columns panel">
    <h2>Account Settings</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'custom form-vertical' }) do |f| %>
        <%= f.error_notification %>
        <%= display_base_errors resource %>
        <label for="">Username</label>
        <input type="text" value="<%= resource.user.name %>" disabled="disabled">
        <label for="">Email</label>
        <input type="text" value="<%= resource.email %>" disabled="disabled">


        <fieldset>
            <legend>Change password</legend>
            <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>
            <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
            <%= f.input :password_confirmation, :required => false %>

        </fieldset>

        <%= f.button :submit, 'Update', :class => 'btn-primary button right' %>
    <% end %>
    </div>

        <%= render "shared/toolbox" %>

</div>