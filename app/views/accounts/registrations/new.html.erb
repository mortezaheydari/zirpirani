<% resource.user ||= User.new %>
<div class="row MarginTop">
    <div class="large-8 large-centered columns panel">

        <div class="row">
            <div class="large-10 large-centered columns">
        <h2>Sign up</h2>
        <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
          <%= f.error_notification %>
          <%= display_base_errors resource %>
            <%= f.fields_for :user do |user_form| %>
                <%= user_form.input :name, label: "Username", :required => true %>
            <% end %>
          <%= f.input :email, :autofocus => true,  :required => true %>
          <%= f.input :password, :required => true %>
          <%= f.input :password_confirmation, :required => true %>

<%=
# tbd 20130429 - Captcha for devise
# to be uncommented when website goes online
# https://github.com/plataformatec/devise/wiki/How-To:-Use-Recaptcha-with-Devise
# https://www.google.com/recaptcha/admin/create
=begin
recaptcha_tags
=end

%>

          <%= f.button :submit, 'Sign up', :class => 'btn-primary button left' %>
        <% end %>
        </div>
<hr>
            <div class="large-10 large-centered columns">
                <%= link_to account_omniauth_authorize_path(:facebook) do %>
                    <div class="large-12 large-centered fb_button">Sign in with Facebook</div>
                <% end -%>
            </div>
<hr>

            <div class="large-10 large-centered columns">

                <%- if controller_name != 'sessions' %>
                    <%= link_to "Sign in", new_session_path(resource_name) %><br />
                <% end -%>

            </div>

</div>