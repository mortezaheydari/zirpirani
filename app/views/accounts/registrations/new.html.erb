<% resource.user ||= User.new %>
<div class="row MarginTop">
    <div class="large-8 large-centered columns panel">

        <div class="row">
            <div class="large-10 large-centered columns">
        <h2>ثبت نام</h2>
        <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
          <%= f.error_notification %>
          <%= display_base_errors resource %>
            <%= f.fields_for :user do |user_form| %>
                <%= user_form.input :name, label: "نام مستعار", :required => true %>
            <% end %>
          <%= f.input :email, label: "ایمیل", :autofocus => true,  :required => true %>
          <%= f.input :password, label: "پسورد", :required => true %>
          <%= f.input :password_confirmation, label: "تکرار پسورد", :required => true %>

          <%= recaptcha_tags%>

          <%= f.button :submit, 'تمام شد رفت', :class => 'btn-primary button left' %>
        <% end %>
        </div>
<hr>
            <div class="large-10 large-centered columns">
                <%= link_to account_omniauth_authorize_path(:facebook) do %>
                    <div class="large-12 large-centered fb_button">ثبت نام از طریق فیسبوک</div>
                <% end -%>
            </div>
<hr>

            <div class="large-10 large-centered columns">

                <%- if controller_name != 'sessions' %>
                    <%= link_to "ورود به وبسایت", new_session_path(resource_name) %><br />
                <% end -%>

            </div>

</div>