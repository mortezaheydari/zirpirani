<div class="row">
    <div class="large-12 columns">
        <div class="postHeader">
            <div class="large-10 columns"><h3><%= post.title %></h3></div>
            <div class="large-2 columns">
                <div class="likeContainer">
                        <a href="#"><div class="like"></div></a>
                </div>
            </div>
        </div>
    </div>
    <div class="large-12 columns">
          <%= image_tag post.image.image.url(:large), als: post.title) %>
    </div>
    <div class="large-12 columns info">
        <a href="#"><div class="large-6 small-6 fb_button left">Share</div></a>
        <a href="#"><div class="large-6 small-6 tw_button">Share</div></a>
        <div class="large-12 columns postFooter"><span>تعداد خنده: ۱۲۲۱</span></div>
    </div>
</div>